{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "noImplicitAny": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "Configuration/*"
            ]
        }
    },
    "include": [
        "Test/**/*"
    ]
}